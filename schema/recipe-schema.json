{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Recipe Schema",
    "type": "object",
    "required": [
        "name",
        "description",
        "tags",
        "parameters",
        "workflow",
        "tips",
        "examples"
    ],
    "properties": {
        "name": {
            "type": "string",
            "maxLength": 100,
            "pattern": "^[a-zA-Z0-9-]+$"
        },
        "description": {
            "type": "string",
            "maxLength": 500
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "^[a-zA-Z0-9-]+$"
            }
        },
        "parameters": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/parameter"
            }
        },
        "workflow": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "tool": {
                        "type": "string",
                        "pattern": "^[a-z][a-z0-9_-]*$",
                        "description": "Tool ID reference - must be lowercase alphanumeric with hyphens and underscores, starting with a letter"
                    },
                    "model": {
                        "type": "string"
                    },
                    "settings": {
                        "type": "object"
                    },
                    "description": {
                        "type": "string"
                    },
                    "tool_usage": {
                        "type": "string"
                    },
                    "prompt": {
                        "type": "string"
                    },
                    "output_handling": {
                        "type": "string"
                    },
                    "notes": {
                        "type": "string"
                    }
                },
                "required": [
                    "id",
                    "name",
                    "tool"
                ]
            }
        },
        "tips": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "examples": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/example"
            }
        }
    },
    "definitions": {
        "parameter": {
            "type": "object",
            "required": [
                "name",
                "description",
                "required"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "required": {
                    "type": "boolean"
                },
                "default": {
                    "type": "string"
                },
                "example": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "workflow_item": {
            "type": "object",
            "required": [
                "id",
                "name",
                "tool",
                "description",
                "tool_usage"
            ],
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "tool": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "tool_usage": {
                    "type": "string"
                },
                "prompt": {
                    "type": "string"
                },
                "tool_settings": {
                    "type": "object"
                },
                "input_source": {
                    "type": "string"
                },
                "output_handling": {
                    "type": "string"
                },
                "notes": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "example": {
            "type": "object",
            "required": [
                "parameters",
                "sample_queries"
            ],
            "properties": {
                "parameters": {
                    "type": "object"
                },
                "sample_queries": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}