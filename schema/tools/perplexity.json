{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Perplexity Tool Schema",
    "allOf": [
        {
            "$ref": "../tool-schema.json"
        },
        {
            "type": "object",
            "properties": {
                "tool_usage": {
                    "type": "string",
                    "description": "How the tool should be used in this step"
                },
                "prompt": {
                    "type": "string",
                    "description": "The prompt to send to Perplexity"
                }
            },
            "required": [
                "tool_usage",
                "prompt"
            ]
        }
    ]
}